<% if @content.errors.any? %>
   Errors: <%= content.errors.full_messages.join(',') %>
   <BR>
   <BR>
<% end %>

<%= form_with(model: content, local: true) do |form| %>
    <div class'field'>
    <%= form.label :title %>
    <%= form.text_field :title %>
    </div>

    <div class'field'>
    <%= form.label :description %>
    <%= form.text_area :description %>
    </div>

<select class="select2 form-control" multiple="multiple", style='width: 50%'>
  <option>orange</option>
  <option>white</option>
  <option>purple</option>
</select>

    <div class='actions'>
        <%= form.submit %>
<% end %>